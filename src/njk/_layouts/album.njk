{% extends '_layouts/base.njk' %}

{% block page_title %}{{ album.title }}{% endblock %}

{% block page_description %}{{ album.title }}{% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <div class="col-sm-6 col-lg-3">
          <div class="album-card">
            <div class="card img">
              <img src="img/discs/{{ album.image }}" alt="{{ album.title }}" class="responsive">
            </div>
            <div class="container">
              <h4><b> <a href="{{ album.slug }}.html">{{album.title}}</a></b></h4>
              <p>Released: {{ album.year }}</p>
            </div>
          </div>
        </div>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block slug %}
        <h1>{{ album.title }}</h1>
        <p>{{ album.description }}</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}