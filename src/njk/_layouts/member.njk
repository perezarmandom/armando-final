{% extends '_layouts/base.njk' %}

{% block page_title %}{{ member.name }}{% endblock %}

{% block page_description %}{{ member.name }}{% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <div class="member-card">
          <div class="card img">
            <img src="{{ member.image }}" alt="{{ member.name }}" class="responsive">
          </div>
          <div class="container">
            <h4><b> <a href="{{ member.slug }}.html">{{member.name}}</a></b></h4>
            <p>
              <ul>
                <li>Born: {{ member.birthplace }}, {{ member.birthdate }}</li>
                <li>Instruments: {{ member.instruments }}</li>
                <li>Tenure: {{ member.tenure }}</li>
              </ul></p>
          </div>
        </div>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block slug %}
        <p>{{ member.text }}</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}